<%- model_class = ProjectBrief -%>
<div class="page-header">
  <h1><%=t '.title', :default => ProjectBrief %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:department) %></th>
      <th><%= model_class.human_attribute_name(:cost_center) %></th>
      <th><%= model_class.human_attribute_name(:budget_in_cents) %></th>
      <th><%= model_class.human_attribute_name(:target_date) %></th>
      <th><%= model_class.human_attribute_name(:participating_stores) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @project_briefs.each do |project_brief| %>
      <tr>
        <td><%= project_brief.id %></td>
        <td><%= project_brief.department %></td>
        <td><%= project_brief.cost_center %></td>
        <td><%= project_brief.budget_in_cents %></td>
        <td><%= project_brief.target_date %></td>
        <td><%= project_brief.participating_stores %></td>
        <td><%=l project_brief.created_at, format: :long %></td>
        <td>
          <%= link_to project_brief_path(project_brief), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to project_brief_path(project_brief), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_project_brief_path,
            :class => 'btn btn-primary' %>
