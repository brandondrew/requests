<h1>Listing project_briefs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Department</th>
      <th>Cost center</th>
      <th>Budget in cents</th>
      <th>Target date</th>
      <th>Participating stores</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_briefs.each do |project_brief| %>
      <tr>
        <td><%= project_brief.user %></td>
        <td><%= project_brief.department %></td>
        <td><%= project_brief.cost_center %></td>
        <td><%= project_brief.budget_in_cents %></td>
        <td><%= project_brief.target_date %></td>
        <td><%= project_brief.participating_stores %></td>
        <td><%= link_to 'Show', project_brief %></td>
        <td><%= link_to 'Edit', edit_project_brief_path(project_brief) %></td>
        <td><%= link_to 'Destroy', project_brief, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

